<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:minWidth="25px"
    android:minHeight="25px"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout1">
    <TextView
        android:text="Contact number: X"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:id="@+id/textView1" />
    <TableRow
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trNome" >
        <TextView
            android:text=" Nome:        "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtNomeFisso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Giorgio"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtNomeVar"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </TableRow>
    <TableRow
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trCog" >
        <TextView
            android:text=" Cognome:  "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtCogFisso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="Brignoli"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtCogVar"
            android:layout_width="match_parent"
            android:layout_height="45dp" />
    </TableRow>
    <TableRow
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/trTel" >
        <TextView
            android:text=" Numero:     "
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTelFisso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:text="5365465588"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/txtTelVar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </TableRow>
</LinearLayout>